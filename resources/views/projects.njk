{% extends 'master' %}

{% block content %}					
<div class="container-fluid">		
	<div class="row">
        <div class="col-lg-12"><h3>Projects</h3></div>
    </div>
		
    <div class="row">
		<div class="col-lg-12 animsition" data-animsition-in-class="fade-in-down-sm" data-animsition-in-duration="800">
			<div class="card">
				<div class="card-header" data-background-color="purple">
                    <a>
                        <h4 class="title"><i class="material-icons">content_paste</i> Project List</h4>
<!--                        <p class="category">Description</p>-->
                    </a>
				</div>
				<div class="card-content table-responsive">
                    {% if currentUser %}
                        <table class="table table-hover">
                            <thead class="text-warning">
                                <th>ID</th>
                                <th>Project Name</th>
                                <th>Adviser</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th>Notes</th>
                            </thead>
                            <tbody>
                                {% for project in projects %}
                                    <tr>
                                        <td>{{project.id}}</td>
                                        <td>{{project.projectname}}</td>
                                        <td>{{project.adviser}}</td>
                                        <td>{{project.created_at}}</td>
                                        <td>{{project.status}}</td>
                                        <td>{{project.notes}}</td>
                                    </tr>

                                {% endfor %}

                            </tbody>
                        </table>
                    {% endif %}
                    
                     {% if not currentUser %}
                        <a class="text-warning">You are not allowed to view this table</a>
                    
                    {% endif %}
				</div>
                
                {% if currentUser %}
                    <div class="card-footer">
                        <ul class="list-unstyled">
                            <li class="active">
                                <form method="POST" action="/addProject">
                                    {{ csrfField }}
                                    <button type="submit" class="btn btn-primary">
                                        <i class="material-icons">playlist_add</i>&nbsp; Add
                                    </button>							
                                </form>	
                            </li>						
                        </ul>
                    </div>	
                {% endif %}
			</div>
		</div>		
	</div>
</div>	
{% endblock %}					