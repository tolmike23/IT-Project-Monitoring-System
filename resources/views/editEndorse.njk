{% extends 'master' %}

{% block content %}
<div class="login-page sidebar-collapse animsition">
    <div class="page-header" filter-color="orange">
        <div class="container">
            <div class="content-center">
              <div class="card">
                    <div class="card-header bg-primary">
                            <ul class="nav nav-tabs nav-tabs-neutral">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" role="tab">
                                        Edit Endorse
                                    </a>
                                </li>
                            </ul>
                        </div>
                    <div class="card-body">
                        <form class="form-horizontal" role="form" method="GET" action="updateProposal">

                            {{ csrfField }}

                            {% for item in proposal %}

                                <div class="form-group">
                                    <label for="groupname" class="text-muted">Created by</label>
                                    <div class="col-md-12">
                                        <input id="endorseBy" type="text" class="form-control" name="endorseBy" value="{{item.endorseBy}} disabled">
                                    </div>
                                </div>
                                <div class="form-group"> 
                                    <label for="lastname" class="col-md-10 text-muted">Description</label>
                                    <div class="col-md-12">
                                        <input id="description" type="text" class="form-control" name="description" value="{{item.description}}" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="submitTo" class="col-md-10 text-muted">Submit to?</label>
                                    <div class="col-md-12">
                                        <select id="submitTo" name="submitTo"           class="selectpicker" data-style="btn btn-primary btn-round btn-md" value= "{{item.endorseType}}"  required>
                                            <option disabled selected>Submit to?</option>
                                            <option value='Submit Project Proposal'>Submit Project Proposal</option>
                                            <option value='Endorse to Coordinator'>Endorse to Coordinator</option>
                                            <option value='For Panel Meeting'>For Panel Meeting</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <textarea id="notes" type="text" class="form-control" name="notes" placeholder="Additional remarks..." rows="3" value={{item.notes}} required></textarea>
                                    </div>
                                </div>

                            {% endfor%}

                            <div class="form-group">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-round btn-md">
                                        <i class="fa fa-btn fa-sign-in">&nbsp;</i> Save
                                    </button>
                                    <a href="/dashboard" class="btn btn-primary btn-round btn-md">
                                        <i class="fa fa-btn fa-sign-out">&nbsp;</i> Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <nav>
                    <ul>
                        <li>
                            <a href="#">
                                Disclaimer
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright">
                    &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script>, Designed by
                    <a href="#" target="_blank">Jaboy</a>.
                </div>
            </div>
        </footer>

    </div>
</div>
{% endblock %}
