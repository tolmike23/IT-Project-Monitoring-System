{% extends 'master' %}

{% block content %}
	<div class="wrapper">
		<div class="page-header clear-filter" filter-color="orange">
		<div class="page-header-image" data-parallax="true"></div>
			<div class="container">
				<div class="row" style="padding-top:90px">
					<div class="col-md-12 animsition" data-animsition-in-class="fade-in-down-sm" data-animsition-in-duration="500">
						<div class="row">
							<div class="col-lg-6 col-md-12">
								<h4 class="category">Faculty Dashboard</h4>
							</div>
						</div>

						<!--Adviser Proposal Tables Start-->
						<div class="card">
							<div class="card-header bg-primary">
								<ul class="nav nav-tabs nav-tabs-neutral">
									<li class="nav-item">
										<a class="nav-link active" data-toggle="tab" role="tab">
											Proposal
										</a>
									</li>
								</ul>
							</div>
						<div class="card-body">
							<table class="table table-hover table-responsive">
							{% if currentUser %}
								<thead class="text-primary">
									<th><strong>Group Name</strong></th>
									<th><strong>Description</strong></th>
									<th><strong>Type</strong></th>
									<th><strong>Notes</strong></th>
									<th><strong>Created</strong></th>
									<th><strong>Approved</strong></th>
								</thead>
								<tbody>
									{% for p in proposals %}
									<tr class="text-black">
										<td>{{p.groupName}}</td>
										<td>{{p.description}}</td>
										<td>{{p.endorseType}}</td>
										<td>{{p.notes}}</td>
										<td>{{p.created_at}}</td>
										<td>
											<form method="GET" action="/confirm">

												<label class="form-check-label">
														<input class="form-check-input" type="radio" name="approved" id="approved" value="option1" checked="" required>
														<span class="form-check-sign"></span>
														Approved
												</label>

												<label class="form-check-label">
														<input class="form-check-input" type="radio" name="approved" id="disapproved" value="option2" required>
														<span class="form-check-sign"></span>
														Disapproved
												</label>

									</td>
									</tr>
									{% endfor %}
								</tbody>
								{% endif %}
							</table>
						</div>
						{% if currentUser %}
						<div class="footer">
							<ul class="list-unstyled">
								<li class="active">
									<button type="submit" class="btn btn-primary btn-round btn-md"  data-toggle="modal" data-target="#addGroup">
										Confirm
									</button>
									</form>
								</li>
							</ul>
						</div>
						{%endif%}
						</div>
						<!--Adviser Proposal Tables End-->

						<!--Adviser Projects Tables Start-->
						<div class="card">
							<div class="card-header bg-primary">
								<ul class="nav nav-tabs nav-tabs-neutral">
									<li class="nav-item">
										<a class="nav-link active" data-toggle="tab" role="tab">
											Projects
										</a>
									</li>
								</ul>
							</div>
						<div class="card-body">
							<table class="table table-hover table-responsive">
							{% if currentUser %}
								<thead class="text-primary">
									<th><strong>Group Name</strong></th>
									<th><strong>Project name</strong></th>
									<th><strong>Created</strong></th>
									<th><strong>Status</strong></th>
									<th><strong>Notes</strong></th>
								</thead>
								<tbody>
									{% for project in projects %}
									<tr class="text-black">
										<td>{{project.groupName}}</td>
										<td>{{project.projectname}}</td>
										<td>{{project.created_at }}</td>
										<td>{{project.status}}</td>
										<td>{{project.notes}}</td>
									</tr>
									{% endfor %}
								</tbody>
								{% endif %}
							</table>
						</div>
						{% if currentUser %}
						<div class="footer">
							<ul class="list-unstyled">
								<li class="active">
									{# <button type="button" class="btn btn-primary btn-round btn-md"  data-toggle="modal" data-target="#addGroup">
										<i class="material-icons">wc</i>&nbsp; Add
									</button> #}
								</li>
							</ul>
						</div>
						{%endif%}
						</div>
						<!--Adviser Projects Tables End-->

						<!-- Project Requirements Tab Start-->
						<div class="card">
							<div class="card-header bg-primary">
								<ul class="nav nav-tabs nav-tabs-neutral">
									<li class="nav-item">
										<a class="nav-link active" data-toggle="tab" role="tab">
										 Project Requirements | List of milestones
										</a>
									</li>
								</ul>
							</div>
						<div class="card-body">
							<table class="table table-hover table-responsive">
							{% if currentUser %}
								<thead class="text-primary">
									{# <th>&nbsp;</th> #}
									<th><strong>Project Name</strong></th>
									<th><strong>Deadline</strong></th>
									<th><strong>Must Have</strong></th>
									<th><strong>Progress (%)</strong></th>
									<th>&nbsp;</th>
								</thead>
								<tbody>
									{% for item in projObjWbs %}
									<tr class="text-black">
										<td>{{item.projectName}}</td>
										<td>{{item.deadline}}</td>
										<td>{{item.must}}</td>
										<td>{{item.milestone}}</td>
										{# <td><a href="/editRequirement">Edit</a>Edit</td> #}
									</tr>
									{% endfor %}
								</tbody>
								{% endif %}
							</table>
						</div>
						{% if currentUser %}
						<div class="footer">
							<ul class="list-unstyled">
								<li class="active">
									{# <button type="button" class="btn btn-primary btn-round btn-md"  data-toggle="modal" data-target="#addRequirements">
										<i class="material-icons">list</i>&nbsp; Add
									</button> #}
								</li>
							</ul>
						</div>
						{%endif%}
						</div>
						<!-- Project Requirements Tab End-->
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
