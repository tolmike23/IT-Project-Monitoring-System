{% if old('errors') %}
	<div class="alert alert-danger">
		<ul class="list-unstyled">
			{% for error in old('errors') %}
				<li>{{ error.message }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}

{% if old('successes') %}
	<div class="alert alert-success">
		<ul class="list-unstyled">
			{% for success in old('successes') %}
				<li>{{ success.message }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}
