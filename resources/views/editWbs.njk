{% extends 'master' %}


{% block content %}

	<div class="container-fluid">
		<div class="row">&nbsp;</div>
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-success">
					<div class="panel-heading">Edit WBS</div>

					<div class="panel-body">
						<form class="form-horizontal" role="form" method="POST" action="/updateWbs">

							{{ csrfField }}

            {% for w in works %}


              <input type="text" name="workId" id ="workId" value="{{w.workId}}" style='display:none'>


							<div class="form-group">
								<label for="groupname" class="col-md-4 control-label">WBS Description</label>
								<div class="col-md-6">
									<input id="descWbs" name="descWbs" type="text" class="form-control"  value="{{w.description}}" required>
								</div>
							</div>



							<div class="form-group">
								<label for="lastname" class="col-md-4 control-label">Start Date</label>
								<div class="col-md-6">
									<input id="startDate" type="date" class="form-control" name="startDate" value="{{w.startdate}}" required>
								</div>
							</div>

              <div class="form-group">
								<label for="lastname" class="col-md-4 control-label">End Date</label>
								<div class="col-md-6">
									<input id="endDate" type="date" class="form-control" name="endDate" value="{{w.enddate}}" required>
								</div>
							</div>

            {% endfor%}
							<div class="form-group">
								<div class="col-md-6 col-md-offset-4">
									<button type="submit" class="btn btn-primary">
										<i class="fa fa-btn fa-sign-in">&nbsp;</i> Save  changes
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
